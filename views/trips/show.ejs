<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <title>Trip Details</title>
</head>
<body>
    <h1>Trip Details</h1>
    <section id="show-page">
        <div>City: </div>
        <div><%= trip.cityName %></div>
        <div>Country: </div>
        <div><%= trip.countryName %></div>
    </section>
          
    <br><br>

    <h2>Reviews</h2>

    <% if (trip.reviews.length) { %>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
            <th>UserId</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% trip.reviews.forEach(function(review) { %>
        <tr>
            <td><%= review.createdAt.toLocaleDateString() %></td>
            <td><%= review.content %></td>
            <td><%= review.rating %></td>
            <td><%= review.firstName%></td>
            <td>
                <form action="/trips/<%= trip._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                 <input type="submit" value="Delete"/>
                </form> 
            </td>
        </tr>
    <% }) %>
    </tbody>
  </table>
    <% } else { %>
        <h5>No Reviews Yet</h5>
    <% } %>


    <form id="add-review-form" method="POST"
      action="/trips/<%= trip._id %>/reviews">
      <label>Review:</label>
      <textarea name="content"></textarea>
      <label>Rating:</label>
      <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <input type="submit" value="Add Review">
    </form>
</body>
</html>